<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    tools:context=".PilihLoginAs">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="2dp"
        android:layout_margin="5dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="2dp"
        android:padding="5dp"

        >
        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_gravity="center"
                android:layout_margin="5dp"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_baseline_person_24"
                app:civ_border_width="2dp"
                app:civ_border_color="#FFC107"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Masuk Sebagai"
                android:gravity="center"
                android:textSize="15dp"
                android:layout_margin="2dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/flower_regular"
                android:textColor="#AF8402">

            </TextView>



            <TextView
        android:padding="10dp"
        android:background="#CF9C01"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mencari Yang Bisa Memasak Untuk Saya "
        android:textSize="15dp"
        android:textStyle="bold"
                android:layout_marginBottom="10dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/flower_regular"
        android:textColor="#F3F0EA"
        >

    </TextView>
    <TextView
        android:padding="10dp"
        android:background="#CF9C01"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Saya Menawarkan Jasa Memasak"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/flower_regular"
        android:textColor="#F3F0EA"
        >

    </TextView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>