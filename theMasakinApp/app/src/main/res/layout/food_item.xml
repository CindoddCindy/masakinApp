<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/cardview_shadow_end_color"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="2dp"
        android:layout_margin="5dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="2dp"

        >
        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Masakan Eropa"
                        android:gravity="center"
                        android:layout_margin="2dp"
                        android:textSize="15dp"
                        android:fontFamily="@font/flower_regular"
                        android:textColor="#AF8402"
                        >

                    </TextView>
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_margin="5dp"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/profile_image"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:src="@drawable/food_example"
                        app:civ_border_width="2dp"
                        app:civ_border_color="#FBFDF9"/>

                </LinearLayout>

                <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:drawableLeft="@drawable/ic_baseline_person_24"
                        android:drawablePadding="7dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nama penjual"
                        android:textSize="15dp"
                        android:layout_margin="2dp"
                        android:fontFamily="@font/flower_regular"
                        android:textColor="#AF8402">

                    </TextView>

                    <TextView
                        android:drawableLeft="@drawable/ic_baseline_location_on_24"
                        android:drawablePadding="7dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lokasi Penjual"
                        android:layout_margin="2dp"
                        android:fontFamily="@font/flower_regular"
                        android:textColor="#AF8402"
                        >

                </TextView>
                    <TextView
                        android:drawableLeft="@drawable/ic_baseline_attach_money_24"
                        android:drawablePadding="7dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Harga Makanan"
                        android:layout_margin="2dp"
                        android:fontFamily="@font/flower_regular"
                        android:textColor="#AF8402"
                        >

                    </TextView>
                    <TextView
                        android:drawableLeft="@drawable/ic_baseline_access_time_24"
                        android:drawablePadding="7dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Jam Tersedia"
                        android:layout_margin="2dp"
                        android:fontFamily="@font/flower_regular"
                        android:textColor="#AF8402"
                        >

                    </TextView>

                    <TextView
                        android:drawableLeft="@drawable/ic_baseline_phone_24"
                        android:drawablePadding="7dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Phone Number"
                        android:layout_margin="2dp"
                        android:fontFamily="@font/flower_regular"
                        android:textColor="#AF8402"
                        >

                    </TextView>


                </LinearLayout>



            </androidx.appcompat.widget.LinearLayoutCompat>
        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>