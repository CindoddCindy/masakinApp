<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@color/cardview_shadow_end_color"
    tools:context=".view.FoodDetail">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="2dp"
        android:layout_margin="5dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="2dp"

        >
        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nama Masakan"
                        android:gravity="center"
                        android:layout_margin="2dp"
                        android:textSize="15dp"
                        android:fontFamily="@font/flower_regular"
                        android:textColor="#AF8402"
                        >

                    </TextView>
                    <ImageView
                        android:layout_margin="5dp"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/profile_image"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:src="@drawable/food_example_dua"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Deskripsi"
                        android:gravity="center"
                        android:layout_margin="5dp"
                        android:textSize="15dp"
                        android:fontFamily="@font/flower_regular"
                        android:textColor="#AF8402"
                        >

                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/deskripsi"
                        android:gravity="left"
                        android:layout_margin="5dp"
                        android:textSize="15dp"
                        android:fontFamily="@font/flower_regular"
                        android:textColor="#AF8402"
                        >

                    </TextView>


                </LinearLayout>

                <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_weight="1"
                            android:drawableLeft="@drawable/ic_baseline_person_24"
                            android:drawablePadding="7dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Nama Penjual"
                            android:layout_margin="5dp"
                            android:fontFamily="@font/flower_regular"
                            android:textColor="#AF8402"
                            >

                        </TextView>
                        <TextView
                            android:layout_weight="1"
                            android:drawableLeft="@drawable/ic_baseline_location_on_24"
                            android:drawablePadding="7dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Loaksi Penjual"
                            android:layout_margin="5dp"
                            android:fontFamily="@font/flower_regular"
                            android:textColor="#AF8402"
                            >

                        </TextView>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_weight="1"
                            android:drawableLeft="@drawable/ic_baseline_attach_money_24"
                            android:drawablePadding="7dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Harga Jasa Memasak"
                            android:layout_margin="5dp"
                            android:fontFamily="@font/flower_regular"
                            android:textColor="#AF8402"
                            >

                        </TextView>
                        <TextView
                            android:layout_weight="1"
                            android:drawableLeft="@drawable/ic_baseline_access_time_24"
                            android:drawablePadding="7dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Jam Memasak"
                            android:layout_margin="5dp"
                            android:fontFamily="@font/flower_regular"
                            android:textColor="#AF8402"
                            >

                        </TextView>

                    </LinearLayout>


                    <TextView
                        android:padding="10dp"
                        android:background="#CF9C01"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tolong Memasak Untuk Saya "
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/flower_regular"
                        android:textColor="#F3F0EA"
                        >

                    </TextView>





                </LinearLayout>



            </androidx.appcompat.widget.LinearLayoutCompat>
        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>